{
  "stylelint.validate": ["css", "scss"],
  "scss.validate": false, //vscodeのscssのvalidateをオフ
  "css.validate": false, //vscodeのcssのvalidateをオフ
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true, // ファイル保存時に stylelint でフォーマット
    "source.fixAll.eslint": true // ファイル保存時に ESLint でフォーマット
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode" //ファイルを保存したタイミングでフォーマットする
}
